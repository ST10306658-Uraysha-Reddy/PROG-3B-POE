@model municipalService.Models.ReportFormModel

@{
    ViewData["Title"] = "Confirmation";
}
<div style="padding:100px">
    <h2 class="text-center mb-4" style="color:#0a2463;">Report Submitted Successfully!</h2>

    <div class="card shadow p-4 mx-auto" style="max-width:600px; padding:100px">
        <p class="fw-bold mb-2">Your reference number is:</p>
        <h4 class="text-primary">@Model.Reference</h4>

        @if (!string.IsNullOrEmpty(Model.FilePath))
        {
            <p class="mt-3">
                <strong>Uploaded File:</strong>
                <a href="@Model.FilePath" target="_blank" class="btn btn-outline-primary ms-2">View File</a>
            </p>
        }

        <hr />

        <p class="text-muted">Thank you for submitting your report. Our team will review it shortly.</p>

        <a href="@Url.Action("Create", "ReportFormModels")" class="btn btn-pink w-100 mt-3">Submit Another Report</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-pink w-100 mt-3">Main Menu</a>
    </div>
</div>
<style>
    .btn-pink {
        background-color: #f47cae;
        color: white;
        font-weight: bold;
        border-radius: 8px;
    }

        .btn-pink:hover {
            background-color: #efc7f9;
            color: #0a2463;
        }
    .btn-blue {
        background-color: #aadbff;
        color:#0a2463;
        font-weight: bold;
        border-radius: 8px;
    }

        .btn-blue:hover {
            background-color: #efc7f9;
            color: #0a2463;
        }

    .text-primary {
        color: #0a2463;
        font-weight: bold;
    }
</style>