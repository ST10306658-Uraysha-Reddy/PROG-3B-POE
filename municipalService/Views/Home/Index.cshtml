@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Three Buttons with Palette</title>
    <style>


        body {
            background-image: url(https://www.canva.com/design/DAG1-3f-fMU/82b7EzuRuJ4JUbG4UCCqfg/view);
            background-size: cover; 
            background-position: center; 
            background-repeat: no-repeat; 
            background-attachment: fixed; 
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

       
        button {
            padding: 14px 18px;
            min-width: 200px;
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s, transform 0.2s;
        }

            button:hover {
                transform: scale(1.05);
            }

        /* Button Colors */
        .btn-navy {
            background-color: #0a2463; /* Deep Navy */
        }

            .btn-navy:hover {
                background-color: #aadbff; /* Sky Blue hover */
                color: #0a2463;
            }

        .btn-pink {
            background-color: #f47cae; /* Soft Pink */
        }

            .btn-pink:hover {
                background-color: #efc7f9; /* Lavender Pink hover */
                color: #0a2463;
            }

        .btn-blue {
            background-color: #aadbff; /* Sky Blue */
            color: #0a2463;
        }

            .btn-blue:hover {
                background-color: #0a2463; /* Deep Navy hover */
                color: #cef4ff;
            }

        .text-dark-navy {
            color: #0a2463; /* Dark navy */
        }

    </style>
</head>
<body>
   
    <div class="container mt-5 text-center" style="padding:100px">
        <h1 class="fw-bold text-dark-navy mb-3">Welcome to the Community Portal!</h1>
        <h2 class="fw-bold text-dark-navy mb-5">Let us know what is happening in your area.</h2>



        <div class="d-flex flex-column flex-md-row justify-content-center gap-3" style="padding: 50px;">
        <button type="button" class="btn-navy"
                onclick="location.href='@Url.Action("Create", "ReportFormModels")'">
            Report Issues
        </button>

        <button type="button" class="btn-pink"
                onclick="location.href='@Url.Action("EventsPage", "Events")'">
                Local Events & Announcements
            </button>
        <button class="btn-blue">Service Request Status</button>
         </div>
    </div>
   
</body>

</html>
